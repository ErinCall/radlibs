{% extends "layout.html.jinja" %}
{% set page_title = 'Create New ' + thing_name %}
{% set menu_page = 'list_associations' %}
{% block content %}
<div class="jumbotron">
	<h1>Create New {{ thing_name }}</h1>
	{% if error %}
		<h4 class="error">{{ error |e}}</h4>
	{% endif %}
</div>
<div class="row-fluid marketing">
	<div class="span2"></div>
	<div class="span8">
		<form method="POST" action="">
			<label for="name">Name: </label>
			<input type="text" name="name" id="name">
			<input type="submit" value="Create">
			{% for name, value in (hidden_values or {}).iteritems(): %}
				<input type="hidden" name="{{ name }}" value="{{ value }}">
			{% endfor %}
		</form>
	</div>
</div>
{% endblock content %}
